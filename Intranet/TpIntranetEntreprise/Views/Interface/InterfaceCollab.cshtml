@using TpIntranetEntreprise.Models.Action;
@using TpIntranetEntreprise.Models.Personne;
@using System;

@{
    ViewData["Title"] = "InterfaceCollab";
}
@model Personne

<div>
    <h1>Bienvenue sur votre Profil @Model.Collab.Prenom</h1>
    <div class="row">
        <div class="col text-center">@Model.Collab.NomTypeCollab: @Model.Collab.Nom @Model.Collab.Prenom  </div>
        <div class="col text-center">Service: @Model.Collab.NomServicePersonne</div>
    </div>
    <div>
        <table class="table table-bordered">
            <thead>
                <tr class="thead-dark">
                    <th>User</th>
                    <th></th>
                    <th>Date</th>
                    <th><h3>Subject</h3></th>
                </tr>
            </thead>
            <tbody>
                @foreach (MissionCollab mc in Model.Collab.MissionCollabs)
                {
                    <tr>

                        <td><div class="col"><a asp-controller="Collaborateur" asp-action="DetailsMissions" asp-route-id="@mc.MatriculeCollab">@mc.NomMission</a></div></td>
                        <td><div class="col">@mc.IdMission</div></td>
                        @*<td><div class="col">@mc.DateDebut</div></td>
                            <td><div class="col">@mc.DateFin</div></td>*@
                    </tr>
                }
            </tbody>
        </table>
        <div class="row">
            <a asp-controller="Interface" asp-action="DemandeAvance" asp-route-id="@Model.Collab.MatriculeCollab" class="col btn btn-warning">Faire une Demande D'avance</a>
            <a asp-controller="Interface" asp-action="DemandeConges" asp-route-id="@Model.Collab.MatriculeCollab" class="col btn btn-warning">Faire une Demande de Congès</a>
            <a asp-controller="Banque" asp-action="CalculerInterets" asp-route-id="@Model.Collab.MatriculeCollab" class="col btn btn-warning">Faire une Note de Frais</a>
        </div>
    </div>
</div>
